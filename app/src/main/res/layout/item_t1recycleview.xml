<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_t1recycleview_linearlayout_width"
    android:layout_height="@dimen/item_t1recycleview_linearlayout_height"
    android:layout_marginHorizontal="@dimen/item_t1recycleview_cardview_horizontal_margin"
    android:layout_marginVertical="4dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_t1recycleview_cardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/item_t1recycleview_cardview_bottom_margin"
        android:layout_weight="4"
        app:cardCornerRadius="@dimen/fragment_home_collection_cardview_corner_radius"
        app:cardElevation="@dimen/fragment_home_collection_cardview_elevation">


        <ImageView
            android:id="@+id/item_t1recycleview_img_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_t1recycleview_tv_name"
        android:layout_marginHorizontal="@dimen/item_t1recycleview_cardview_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold" />
</LinearLayout>