<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_t2recycleview_cv"
    android:layout_width="@dimen/item_t2recycleview_outer_cardview_width"
    android:layout_height="@dimen/item_t2recycleview_outer_cardview_height"
    android:layout_marginHorizontal="@dimen/item_t1recycleview_cardview_horizontal_margin"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="@dimen/fragment_home_collection_cardview_corner_radius"
    app:cardElevation="@dimen/fragment_home_collection_cardview_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/item_t2recycleview_inner_cardview_width"
            android:layout_height="@dimen/item_t2recycleview_inner_cardview_height"
            app:cardCornerRadius="@dimen/fragment_home_collection_cardview_corner_radius"
            app:cardElevation="@dimen/item_t2recycleview_inner_cardview_elevation"
            >

            <ImageView
                android:id="@+id/item_t2recyvleview_img_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_t2recycleview_tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start"
            android:textSize="@dimen/item_t2recycleview_textview_name_textsize"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_margin="@dimen/item_t2recycleview_textview_name_margin"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/item_t2recycleview_cv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/item_t2recycleview_volume_cardview_margin"
            app:cardCornerRadius="@dimen/item_t2recycleview_cardview_volume_cornerradius"
            app:cardElevation="@dimen/item_t2recycleview_inner_cardview_elevation"
            >

            <TextView
                android:id="@+id/item_t2recycleview_tv_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginVertical="@dimen/item_t2recycleview_volume_textview_marginVertical"
                android:layout_marginHorizontal="@dimen/item_t2recycleview_volume_textview_marginHorizontal"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>