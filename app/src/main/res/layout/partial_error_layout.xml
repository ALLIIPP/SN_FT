<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/partial_error_layout_rl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <ImageView
        android:id="@+id/partial_error_imgv_errorimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/error_image" />

    <TextView
        android:id="@+id/partial_error_tv_errormsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/partial_error_imgv_errorimg"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="12dp"
        android:gravity="center"
        android:text="@string/partial_error_layout_tv_errormssg"
        android:textColor="@color/fragment_collection_descrition_color" />

    <androidx.cardview.widget.CardView
        android:id="@+id/partial_error_cv_retrycv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/partial_error_tv_errormsg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:foreground="@drawable/ripple_gray"
        app:cardBackgroundColor="@color/teal_200"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="@string/partial_error_layout_retry_tv_retry"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>