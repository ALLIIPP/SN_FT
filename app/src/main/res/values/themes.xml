<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <attr name="title_underline_color" format="color" />
    <attr name="fragment_collection_appbarlayout_background_color" format="color" />
    <attr name="fragment_collection_appbarlayout_gradient" format="reference" />
    <attr name="fragment_collection_toggle_button_attribute" format="color"/>
    <attr name="fragment_collection_toggle_button_attribute_textcolor" format="reference" />
    <attr name="fragment_collection_toggle_button_attributesort" format="reference"/>

    <style name="Theme.Solananftviewer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#111111</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="title_underline_color">#eeeeee</item>
        <item name="android:textColor">#000000</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="fragment_collection_appbarlayout_background_color">#ffffff</item>
        <item name="fragment_collection_appbarlayout_gradient">@drawable/collection_fragment_custom_gradient_light</item>
        <item name="fragment_collection_toggle_button_attribute">@drawable/toggle_button_attribute_light</item>
        <item name="fragment_collection_toggle_button_attribute_textcolor">@drawable/toggle_button_attribute_textcolor_light</item>
        <item name="fragment_collection_toggle_button_attributesort">@drawable/toggle_button_attribute_light</item>
    </style>

    <style name="Theme.Solananftviewer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Solananftviewer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Solananftviewer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>